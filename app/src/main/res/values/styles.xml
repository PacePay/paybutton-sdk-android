    <style name="EditStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">#7D8488</item>
        <item name="android:textColor">#353F47</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <!--<item name="fontPath">fonts/timeburnernormal.ttf</item>-->

        <!--<item name="android:singleLine">true</item>-->
    </style>
    <declare-styleable name="currencyEditText"><attr format="string" name="groupDivider"/><attr format="string" name="monetaryDivider"/><attr format="string" name="locale"/><attr format="boolean" name="showSymbol"/></declare-styleable>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
    </style>
