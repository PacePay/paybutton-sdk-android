<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.paysky.ui.fragment.paymentprocessing.PaymentProcessingFragment">

    <ImageView
        android:id="@+id/loading_view"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_92sdp"
        android:layout_marginEnd="@dimen/_92sdp"
        android:src="@drawable/ic_loading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/loading_view"
        android:layout_alignTop="@id/loading_view"
        android:layout_alignEnd="@id/loading_view"
        android:layout_alignBottom="@id/loading_view"
        android:gravity="center"
        android:text="@string/processing"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />

</RelativeLayout>