<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.paysky.ui.fragment.paymentfail.PaymentFailedFragment">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:src="@drawable/ic_transaction_failed" />

    <TextView
        android:id="@+id/transaction_declined_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/declined_cause_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="12dp">

        <Button
            android:id="@+id/close_button"
            style="@style/buttonStyle"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="@string/close"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/try_again_button"
            style="@style/buttonStyle"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/paybutton_green_button"
            android:text="@string/try_again"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
